<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MovieNight.Views"
    xmlns:prism="http://prismlibrary.com"
    x:Class="MovieNight.Views.MenuPage"
    NavigationPage.BackButtonTitle=" "
    Title="Control Templates">

    <StackLayout>
        <Button Text="Cards" Command="{prism:NavigateTo CardsPage}" VerticalOptions="EndAndExpand"/>
        <Button Text="Movies" Command="{prism:NavigateTo MainPage}" />
        <Image Source="https://expertday.forxamarin.com/wp-content/uploads/2019/07/XamExpertDay2019_WhiteTextAndBrain-300x300.png"
               VerticalOptions="EndAndExpand"
               HorizontalOptions="EndAndExpand"
               Opacity=".5"
               Margin="0,0,-20,-30"/>
    </StackLayout>
</ContentPage>
